<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Top border -->
    <item
        android:top="0dp"
        android:left="0dp"
        android:right="0dp"
        android:height="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_grey" />
        </shape>
    </item>

    <!-- Background -->
    <item android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>
