<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    <style name="RedRoundedButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ButtonShape</item>
        <item name="backgroundTint">@color/button_cancel_light</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>
    <style name="GreenRoundedButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ButtonShape</item>
        <item name="backgroundTint">@color/button_save_light</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>
</resources>